{{ header }}
<ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
<div id="product-manufacturer-list" class="content">
  <div class="content-block">
   {{ column_left }}
    <div class="content-center">
     {{ content_top }}
     <div class="manufacturer-list">
      <h1 class="heading-title">{{ heading_title }}</h1>
      {% if categories %}
      <div class="manufacturer-top-link"><strong>{{ text_index }}</strong> {% for category in categories %}
        &nbsp;&nbsp;&nbsp;<a href="index.php?route=product/manufacturer#{{ category.name }}">{{ category.name }}</a> {% endfor %} </div>
      {% for category in categories %}
      <h2 id="{{ category.name }}">{{ category.name }}</h2>
      {% if category.manufacturer %}
      {% for manufacturers in category.manufacturer|batch(4) %}
      <div class="brand-link-block"> {% for manufacturer in manufacturers %}
        <div class="brand-link"><a href="{{ manufacturer.href }}">{{ manufacturer.name }}</a></div>
        {% endfor %} </div>
      {% endfor %}
      {% endif %}
      {% endfor %}
      {% else %}
      <p>{{ text_empty }}</p>
      <div class="buttons">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {% endif %}
     </div>
    </div>
    {{ column_right }}</div>
     {{ content_bottom }}
</div>
{{ footer }}