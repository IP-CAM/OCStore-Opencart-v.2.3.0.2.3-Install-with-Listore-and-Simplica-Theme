{% if languages|length > 1 %}

<li>
  <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-language" class="dropdown" >
  
      <button onclick="return false">
      {% for language in languages %}
      {% if language.code == code %} 
     <i class="material-icons">
language
</i>
      {% endif %}
      {% endfor %}
      <span>{{ text_language }}</span><i class="material-icons">keyboard_arrow_down</i></button>
      <ul class="account-link">
        {% for language in languages %}
        <li>
          <button class="btn btn-link btn-block language-select" type="button" name="{{ language.code }}"><img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}" /> {{ language.name }}</button>
        </li>
        {% endfor %}
      </ul>
    
    <input type="hidden" name="code" value="" />
    <input type="hidden" name="redirect" value="{{ redirect }}" />
     
  </form>
</li>

{% endif %}
